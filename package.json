{
  "name": "iamid-provider",
  "version": "1.0.3",
  "description": "OpenID, OAuth 2.0 and IAMID Authorization Server implementation for Node.js",
  "main": "index.js",
  "scripts": {
    "lint:fix": "standard --fix",
    "lint": "standard",
    "test:unit": "mocha test/run.js",
    "test:unit-no-only": "npm run test:unit -- --forbid-only",
    "coverage": "nyc npm run test:unit-no-only",
    "test": "npm run lint && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@uk-gitlab.almuk.santanderuk.corp:2220/verified-id/iamid-provider.git"
  },
  "keywords": [
    "Node",
    "OIDC",
    "IAMID",
    "OAuth",
    "javascript",
    "OP",
    "server",
    "jwt",
    "Authorization"
  ],
  "author": "Innovation Hub",
  "license": "MIT",
  "dependencies": {
    "@santander/oidc-provider": "1.0.0-beta.17",
    "debug": "^4.1.1",
    "google-libphonenumber": "^3.2.6",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "log4js": "^6.1.0",
    "mongodb": "^3.5.1",
    "nanoid": "^2.1.10"
  },
  "devDependencies": {
    "jsonwebtoken": "^8.5.1",
    "husky": "^4.0.10",
    "mocha": "^7.0.0",
    "mongodb-memory-server": "^6.2.3",
    "nyc": "^15.0.0",
    "pkce-challenge": "^2.0.0",
    "set-cookie-parser": "^2.4.0",
    "sinon": "^8.1.0",
    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js",
      "test/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "lcovonly",
      "html",
      "text"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm i && npm test"
    }
  },
  "publishConfig": {
    "registry": "https://nexus.almuk.santanderuk.corp/repository/npm-releases/"
  }
}
